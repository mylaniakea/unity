# ==========================================
# Unity - Homelab Intelligence Hub
# Environment Configuration Template
# ==========================================
# Copy this file to .env and update with your values
# All settings are optional and have sensible defaults

# ==========================================
# Application Settings
# ==========================================
APP_NAME="Unity - Homelab Intelligence Hub"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=info  # Options: debug, info, warning, error, critical

# ==========================================
# Database Configuration
# ==========================================
# SQLite (default for development)
# DATABASE_URL=sqlite:///./data/homelab.db

# PostgreSQL (recommended for production)
DATABASE_URL=postgresql+psycopg2://homelab_user:homelab_password@db:5432/homelab_db

# ==========================================
# Security - JWT Authentication
# ==========================================
# IMPORTANT: Change these in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Security - Credential Encryption
# ==========================================
# Generate with: python backend/scripts/generate_encryption_key.py
ENCRYPTION_KEY=your-encryption-key-for-storing-credentials

# ==========================================
# SSH Configuration
# ==========================================
SSH_KEY_PATH=./data/homelab_id_rsa

# ==========================================
# AI/LLM API Keys (Optional)
# ==========================================
# For AI-powered container analysis and recommendations
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ==========================================
# Web Push Notifications (Optional)
# ==========================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com

# ==========================================
# Container Management
# ==========================================
# Docker host (leave empty for local Unix socket)
DOCKER_HOST=
# Prefix for compose projects managed by Unity
COMPOSE_PROJECT_PREFIX=unity

# ==========================================
# Scheduler Configuration
# ==========================================
ENABLE_SCHEDULERS=true
SNAPSHOT_INTERVAL_HOURS=24
INFRASTRUCTURE_COLLECTION_MINUTES=5
CONTAINER_SCAN_INTERVAL_HOURS=6
THRESHOLD_CHECK_INTERVAL_MINUTES=1

# ==========================================
# API Configuration
# ==========================================
API_V1_PREFIX=/api/v1
# Comma-separated list of CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:8080

# ==========================================
# Data Retention
# ==========================================
# Number of days to keep historical data
RETENTION_DAYS=365

# ==========================================
# Feature Flags
# ==========================================
ENABLE_AI_ANALYSIS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PLUGINS=true

# ==========================================
# Frontend Configuration (for Vite)
# ==========================================
VITE_API_URL=http://localhost:8000

# OAuth2 Configuration (Week 2)
# GitHub OAuth - Create app at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Google OAuth - Create app at https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth redirect URI (update based on your deployment)
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/oauth/callback

